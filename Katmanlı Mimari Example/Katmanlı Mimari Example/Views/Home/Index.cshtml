@using Data.Entities
@model List<Student>
@{
    @ViewBag.Tite = "Katmanlı Mimari";
}
<br />
<a href="@Url.Action("Create","Home")" class="btn btn-info btn-sm"><i class="fa fa-pencil"></i> Yeni Öğrenci Ekle </a>
<br /><br />
<div class="x_content">
    <table id="example" class="table table-striped table-bordered nowrap" cellspacing="0" style="width:50%;">
        <thead>
            <tr>
                <th>Öğrenci Adı</th>
               
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentName)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit","Home", new { id = @item.Id })" class="btn btn-info btn-sm"> Düzenle </a>
                        <a href="@Url.Action("Details", "Home", new { id = @item.Id })" class="btn btn-info btn-sm"> Detayı Gör </a>
                        <a href="@Url.Action("Delete", "Home", new { id = @item.Id })" class="btn btn-danger btn-sm"> Sil </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>




