@model Data.Entities.Student

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Kullanıcı Düzenleme Sayfası</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-5">
                <label class="col-md-5">Ad-Soyad Giriniz: </label><br />
                @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control", @required = "required", @maxlength = "20" } })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-success" />
            </div>
        </div>
    </div>
}

